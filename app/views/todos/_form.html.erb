<%= form_for [todo] do |f| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(todo.errors.count, "error") %></h4>
      <ul>
        <% todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
   <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter to do list title" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
 <% end %>
