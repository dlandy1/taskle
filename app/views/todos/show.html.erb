<h1><%= link_to "All Lists", users_path %></h1>
<%= link_to "New Todo", new_todo_path(@todo), class: 'btn btn-success' %>
<div class="col-md-10">
  

<table class="table table-striped table-hover ">
<h2><%= @todo.title %></h2>
  <tbody>
    <%= render partial: 'items/item', collection: @todo.items %>
    </tbody>
</table> 
<%= form_for [ @todo, @todo.items.new] do |f| %>
  <table class="table table-striped table-hover ">
    <tbody>
      <tr>
        <td><%= f.label :description %> </td>
        <td><%= f.text_field :description, class: 'col-md-11' %></td>
        <td><%= f.submit "Create Task"%></td>
    </tr>
    </tbody>
  </table> 
<% end %>
</div>


